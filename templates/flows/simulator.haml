#simulator.hide
  .simulator-content
    .simulator-close.icon-close
    .simulator-body
    .simulator-loading
      %img{ src: "{{STATIC_URL}}images/loader-bars.gif" }
    .simulator-hidden
    .simulator-footer

      .media-button.gps-button.hide
        %a.btn.btn-primary
          GPS

      .media-button.photo-button.hide
        %a.btn.btn-primary
          Photo

      .media-button.video-button.hide
        %a.btn.btn-primary
          Video

      .media-button.audio-button.hide
        %a.btn.btn-primary
          Audio

      .media-button.options-button.hide
        %a.btn.btn-primary
          Send options

      .imessage
        %textarea
        %span.send-message{title:"Send Text",style:"padding-left:2px;padding-right:4px;"} Send
        %span.send-photo{title:"Send Photo",style:"padding-left:5px;border-left:1px solid #CCC;"}
          %i.icon-photo{style:"font-size:16px"}
    .simulator-actions
      .simulator-refresh.icon-loop

:css
  .simulator-content {
    background: url('{{STATIC_URL}}images/simulator_bg.png') top center no-repeat;
  }

  .media-button {
    text-align: center;
  }

  .media-button .btn {
    padding: 2px 12px;
    margin-top: 3px;
  }

  span.media-file {
    width: 100%;
    display: block;
    text-align: center;
  }

  span.media-file img {
    width: 90%;
  }